<%- include('../partials/head', {'title' : title}) %>
<div id="app">
    <div id="home">
        <div class="welcome">
            <button class="btn loginAsTech" data-bs-toggle="modal" data-bs-target="#loginModal">Login as
                Teacher</button>
            <div class="logo-container d-flex justify-content-center">
                <div class="logo">
                    <div class="outline right"></div>
                    <div class="outline left"></div>
                    <div class="card right">
                        <div class="suit">
                            <img src="/assets/img/logo-1.png" alt="">
                        </div>
                    </div>
                    <div class="card left">
                        <div class="suit">
                            <img src="/assets/img/logo-2.png" alt="">
                        </div>
                    </div>
                </div>
            </div>
            <h1><i>
                    <%= title %>
                </i></h1>
            <form action="/" method="post">
                <input type="hidden" id="orgId" name="orgId" value="2">
                <div class="text-center">
                    <button class="play-button bg-transparent" type="submit">
                        <div class="circle d-flex align-items-center justify-content-center">
                            <div class="icon"><img src="/assets/img/play.svg" alt="" class="svg-inject"></div>
                        </div>
                    </button>
                </div>
                
            </form>
            
        </div>
    </div>
</div>
<!-- login teacher start -->
<div class="modal" id="loginModal" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header py-2">
                <h5 class="modal-title text-dark" id="staticBackdropLabel">Login as Teacher</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="loginForm" onsubmit="auth(event)">
                    <div class="form-group">
                        <label for="username" class="text-dark">Email Address</label>
                        <input type="email" class="form-control" name="username" id="username"
                            placeholder="Email Address">
                    </div>
                    <div class="form-group">
                        <label for="Password" class="text-dark">Password</label>
                        <input type="password" class="form-control" name="password" id="password"
                            placeholder="Password">
                    </div>
                    <div class="form-group mb-0">
                        <button class="btn btn-primary px-4 submitBtn" type="submit">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- login teacher end -->
<%- include('../partials/footer', { home: true }) %>

